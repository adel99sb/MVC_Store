@{
    var toastMessage = TempData["ToastMessage"] as string;
    var toastType = TempData["ToastType"] as string ?? "success";
}

@if (!string.IsNullOrEmpty(toastMessage))
{
    <script type="text/javascript">
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut",
            "opacity": 1
        };
        toastr["@toastType"]("@toastMessage");
    </script>
}