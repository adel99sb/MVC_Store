<body class="main-layout">
    <div class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">Discover Our Premium Tech Products</h1>
                <p class="hero-subtitle">Explore our extensive collection of cutting-edge technology products, designed to enhance your digital lifestyle.</p>
                <div class="search-container">
                    <form asp-action="Search" asp-controller="Products" method="get">
                        <input type="text" name="searchTerm" class="search-input" placeholder="Search for products..." />
                        <button type="submit" class="search-button">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.SearchTerm != null)
    {
        <div class="container">
            <div class="search-results-header">
                <h2>Search Results for: "@ViewBag.SearchTerm"</h2>
                <a asp-action="Index" class="btn btn-outline-secondary">Clear Search</a>
            </div>
        </div>
    }

    <!-- brand -->
    <div class="brand">
        <div class="container">
            <div class="section-title">
                <h2>Our Products</h2>
            </div>
            <div class="row">
                @foreach (var item in Model.OrderBy(x => x.CreatedAt))
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                        <div class="brand_box">
                            <div class="image-container">
                                <img src="~/images/@item.Pic" alt="@item.Name" />
                            </div>
                            <div class="card-overlay">
                                <div class="card-badge">
                                    @if (item.NewPrice != null)
                                    {
                                        <span class="badge-sale">Sale</span>
                                    }
                                    else if (item.AvailableQuantity <= 0)
                                    {
                                        <span class="badge-sold">Sold Out</span>
                                    }
                                    else if (item.AvailableQuantity < 5)
                                    {
                                        <span class="badge-limited">Limited</span>
                                    }
                                    else
                                    {
                                        <span class="badge-new">In Stock</span>
                                    }
                                </div>
                            </div>
                            <div class="product-details">
                                <div class="price-tag">
                                    @if (item.NewPrice != null)
                                    {
                                        <span class="current-price">$@item.NewPrice.Value</span>
                                        <span class="original-price">$@item.Price</span>
                                        
                                        decimal discountPercentage = Math.Round((1 - ((decimal)item.NewPrice.Value / (decimal)item.Price)) * 100);
                                        
                                        <span class="discount-percentage">-@discountPercentage%</span>
                                    }
                                    else
                                    {
                                        <span class="current-price">$@item.Price</span>
                                    }
                                </div>
                                <span class="product-name">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </span>
                                <span class="product-model">
                                    @Html.DisplayFor(modelItem => item.Model)
                                </span>
                                <div class="product-rating">
                                    <div class="rating-stars">
                                        @{
                                            int fullStars = (int)item.AverageRating;
                                            int halfStar = (item.AverageRating - fullStars) >= 0.5 ? 1 : 0;
                                            int emptyStars = 5 - fullStars - halfStar;
                                        }
                                        @for (int i = 0; i < fullStars; i++)
                                        {
                                            <img src="~/images/star.png" alt="Full Star" />
                                        }
                                        @if (halfStar == 1)
                                        {
                                            <img src="~/images/half-star.png" alt="Half Star" />
                                        }
                                        @for (int i = 0; i < emptyStars; i++)
                                        {
                                            <img src="~/images/empty-star.png" alt="Empty Star" />
                                        }
                                    </div>
                                    <span class="rating-count">@Math.Round(item.AverageRating, 1)</span>
                                </div>
                                <div class="card-actions">
                                    <button class="btn btn-details">
                                        <a asp-action="Details" asp-route-id="@item.Id">Show Details</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- end brand -->
