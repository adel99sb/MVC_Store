@model Ali_Store.Data.Model.Offer

@{
    ViewData["Title"] = "Edit Offer";
}

<div class="container mt-4">
    <h2>Edit Offer</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>@Model.Product.Name (@Model.Product.Model)</h4>
                </div>
                <div class="card-body">
                    <p>Original Price: $@Model.Product.Price</p>
                    <p>Current Offer Price: $@Model.Price</p>

                    <form asp-action="EditOffer" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label for="newPrice" class="form-label">New Price:</label>
                            <input type="number" id="newPrice" name="newPrice" class="form-control" value="@Model.Price" step="0.01" min="0.01" required />
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Update Offer</button>
                            <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 