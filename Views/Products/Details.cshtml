@model Ali_Store.Data.Model.Product
@using Ali_Store.Data.Model

@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GoodFor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GoodFor)
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.IsAdmin)
    {
       <button class="btn btn-info"> <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a></button>
    }   
    else
    {
        if(Model.IsSall == false)
        {
            <button class="btn btn-primary">
                <a asp-action="AddToCart" asp-controller="Products" asp-route-productId="@Model?.Id" style="color: white; text-decoration: none;">Add to Cart</a>
            </button>
        }
        else
        {
            <span>Sold</span>
        }
    }
    <button class="btn btn-info">  <a asp-action="Index">Back to List</a></button>
</div>

<div>
    <h4>Ratings</h4>
    <hr />
    <div>
        @if (Model.Rates != null && Model.Rates.Any())
        {
            <ul>
                @foreach (var rating in Model.Rates)
                {

                    <li>@rating.User.FirstName: @rating.RateTo5 - @rating.Comment</li>
                }
            </ul>
        }
        else
        {
            <p>No ratings yet.</p>
        }
    </div>
    <div>
        <h5>Add a Rating</h5>
        <form asp-action="AddRating" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <div class="form-group">
                <label for="RateTo5">Rate (1-5):</label>
                <input type="number" id="RateTo5" name="RateTo5" min="1" max="5" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="Comment">Comment:</label>
                <textarea id="Comment" name="Comment" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Rating</button>
        </form>
    </div>
</div>

<div>
    @if (ViewBag.IsAdmin)
    {
        <h4>Offers</h4>
        <hr />
        <div>
            @if (Model.Offers != null && Model.Offers.Any())
            {
                <ul>
                    @foreach (var offer in Model.Offers)
                    {
                        <li>Offer Price: @offer.Price</li>
                    }
                </ul>
            }
            else
            {
                <p>No offers available.</p>
            }
        </div>
        <div>
            <h5>Add a New Offer</h5>
            <form asp-action="AddOffer" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label for="newPrice">New Offer Price:</label>
                    <input type="number" id="newPrice" name="newPrice" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Submit Offer</button>
            </form>
        </div>
    }
</div>


