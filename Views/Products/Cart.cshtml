@model Ali_Store.Data.Model.Cart
@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    .table {
        margin-top: 20px;
    }
    .btn-danger, .btn-success {
        margin-top: 10px;
    }
    h3 {
        margin-top: 20px;
        color: #343a40;
    }
</style>

<h1>Shopping Cart</h1>

@if (!Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Products" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.Product.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Total: @Model.TotalPrice</h3>
    <form asp-action="PurchaseCart" asp-controller="Products" method="post">
        <button type="submit" class="btn btn-success">Purchase</button>
    </form>
} 