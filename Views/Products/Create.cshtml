@model Ali_Store.Data.Model.Product

@{
    ViewData["Title"] = "Add New Product";
}

<style>
    .product-form-container {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin: 40px 0;
    }
    
    .product-form-header {
        margin-bottom: 25px;
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
    }
    
    .product-form-header h2 {
        color: #253453;
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .product-form-header p {
        color: #7f8c8d;
        font-size: 16px;
        margin-bottom: 0;
    }
    
    .form-section {
        margin-bottom: 30px;
    }
    
    .form-section h4 {
        color: #34495e;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }
    
    .form-section h4 svg {
        margin-right: 10px;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 15px;
    }
    
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }
    
    .form-control {
        height: 50px;
        padding: 10px 15px;
        border-radius: 8px;
        border: 2px solid #e0e0e0;
        font-size: 15px;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #253453;
        box-shadow: 0 0 0 3px rgba(37, 52, 83, 0.1);
    }
    
    textarea.form-control {
        height: auto;
        min-height: 100px;
    }
    
    .control-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        display: block;
    }
    
    .text-danger {
        font-size: 13px;
        margin-top: 5px;
    }
    
    .file-upload {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        border: 2px dashed #e0e0e0;
        border-radius: 8px;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .file-upload:hover {
        border-color: #253453;
    }
    
    .file-upload input[type="file"] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }
    
    .file-upload svg {
        margin-bottom: 10px;
        color: #253453;
    }
    
    .file-upload p {
        margin-bottom: 0;
        font-size: 14px;
        color: #7f8c8d;
    }
    
    .btn-container {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #253453 0%, #1a2541 100%);
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 7px 14px rgba(37, 52, 83, 0.2);
    }
    
    .btn-outline {
        background: transparent;
        border: 2px solid #e0e0e0;
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 600;
        color: #7f8c8d;
        transition: all 0.3s ease;
    }
    
    .btn-outline:hover {
        border-color: #253453;
        color: #253453;
    }
    
    .btn-outline a {
        color: inherit;
        text-decoration: none;
    }
</style>

<div class="product-form-container">
    <div class="product-form-header">
        <h2>Add New Product</h2>
        <p>Fill in the details below to add a new product to your inventory.</p>
    </div>
    
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-section">
            <h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
                Basic Information
            </h4>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Product Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label">Model</label>
                    <input asp-for="Model" class="form-control" placeholder="Enter model number" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Category</label>
                <select asp-for="Type" class="form-control">
                    <option value="">Select a category</option>
                    <option value="Laptob">Laptop</option>
                    <option value="Mobail">Mobile</option>
                    <option value="Extentions">Accessories</option>
                    <option value="All">Other</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoodFor" class="control-label">Product Description</label>
                <textarea asp-for="GoodFor" class="form-control" placeholder="Describe what this product is good for"></textarea>
                <span asp-validation-for="GoodFor" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-section">
            <h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                    <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
                </svg>
                Pricing Information
            </h4>
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Price ($)</label>
                    <input asp-for="Price" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label">Quantity Available</label>
                    <input asp-for="Quantity" class="form-control" type="number" min="1" value="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="form-section">
            <h4>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-image" viewBox="0 0 16 16">
                    <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                    <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
                </svg>
                Product Images
            </h4>
            <div class="form-group">
                <label class="control-label">Main Product Image</label>
                <div class="file-upload">
                    <input type="file" name="PicPath" id="mainImageInput" accept="image/*" />
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708l2-2z"/>
                        <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383zm.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z"/>
                    </svg>
                    <p>Drag & drop main image here, or click to browse</p>
                </div>
                <div class="image-preview-container" id="mainImagePreview">
                    <h5>Main Image Preview</h5>
                    <img id="mainPreviewImg" src="#" alt="Main image preview" />
                </div>
            </div>
            
            <div class="form-group mt-4">
                <label class="control-label">Additional Product Images</label>
                <div class="file-upload">
                    <input type="file" name="ImageFiles" id="additionalImagesInput" accept="image/*" multiple />
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-images" viewBox="0 0 16 16">
                        <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                        <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z"/>
                    </svg>
                    <p>Drag & drop additional images here, or click to browse</p>
                </div>
                <div id="additionalImagesPreview" class="mt-3 row"></div>
            </div>
        </div>
        
        <div class="btn-container">
            <button type="submit" class="btn btn-primary">Create Product</button>
            <button type="button" class="btn btn-outline">
                <a asp-action="Index">Cancel</a>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Main image preview
            $('#mainImageInput').change(function() {
                var file = this.files[0];
                if (file) {
                    var reader = new FileReader();
                    
                    reader.onload = function(e) {
                        $('#mainPreviewImg').attr('src', e.target.result);
                        $('#mainImagePreview').addClass('show');
                    }
                    
                    reader.readAsDataURL(file);
                } else {
                    $('#mainImagePreview').removeClass('show');
                }
            });
            
            // Additional images preview
            $('#additionalImagesInput').change(function() {
                var files = this.files;
                $('#additionalImagesPreview').empty();
                
                if (files.length > 0) {
                    for (var i = 0; i < files.length; i++) {
                        (function(file) {
                            var reader = new FileReader();
                            reader.onload = function(e) {
                                var imgContainer = $('<div class="col-md-3 mb-3"></div>');
                                var img = $('<img class="img-thumbnail" style="height: 150px; object-fit: cover;">');
                                img.attr('src', e.target.result);
                                imgContainer.append(img);
                                $('#additionalImagesPreview').append(imgContainer);
                            }
                            reader.readAsDataURL(file);
                        })(files[i]);
                    }
                }
            });
        });
    </script>
}
